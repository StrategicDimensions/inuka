<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_invoice_validate_form" model="ir.ui.view">
        <field name="name">account.invoice.validate.form</field>
        <field name="model">account.invoice.validate</field>
        <field name="arch" type="xml">
            <form string="Validate Invoice">
                <p>
                    The Vendor Bill total does not match the Purchase Order total. Do you want to proceed?
                </p>
                <footer>
                    <button string="OK" name="invoice_confirm" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
