<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record id="view_partner_watchlist_comment_form" model="ir.ui.view">
        <field name="name">partner.watchlist.comment.form</field>
        <field name="model">res.partner.watchlist</field>
        <field name="arch" type="xml">
            <form string="Watchlist Comment">
                <div>
                    <field name="comment"/>
                </div>
                <footer>
                    <button name="action_watchlist_comment" string="Submit" type="object" class="btn btn-sm btn-primary"/>
                    <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
