<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="report_invoice_document_systemworks" inherit_id="account.report_invoice_document">
      <xpath expr="//t[@t-call='web.external_layout']" position="replace">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
          <div class="header o_background_header">
            <div class="pull-right col-xs-4" style="font-size: 16px;">
            </div>
            <img t-if="o.company_id.get_company(o).logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" class="pull-left" style="max-width:400px; max-height:150;"/>
            <div class="pull-left company_address"><!--<style="font-size: 15px;">-->
            <span style="font-size: 16px;">Fine Fragrance Wholesalers (PTY) LTD</span>
            <span t-field="o.company_id.get_company(o).partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}" style="font-size: 16px;max-height:150px;"/>
            </div>
            <div class="clearfix mb8"/>
            </div>
            <div class="footer o_background_footer">
              <div class="text-center" style="background-color: #FFFFFF;">
                <table  class="table border-black" style="font-size: 12px; border: 1.8px solid black;">
                  <tr style="border: 1.8px solid black">
                    <td  colspan="2" class="text-left" style="border: 1.8px solid black">PLEASE REPORT ANY DISCREPANCIES WITHIN 48 HOURS OF RECEIVING YOUR ORDER. YOUR ORDER WAS PROUDLY PREPARED UNDER CAMERA SURVEILLANCE BY</td>
                  </tr>
                  <tr style="border: 1.8px solid black">
                    <td class="text-left" style="border: 1.8px solid black">PICKER:</td>
                    <td class="text-left" style="border: 1.8px solid black">CHECKER 1:</td>
                  </tr>
                  <tr style="border: 1.5px solid black;">
                    <td class="text-left" style="border: 1.8px solid black">CHECKER 2:</td>
                    <td class="text-left" style="border: 1.8px solid black">BOXER:</td>
                  </tr>
                </table>
                <ul class="list-inline">
                   <li t-if="o.company_id.get_company(o).phone"><i class="fa fa-phone"/> <span t-field="o.company_id.get_company(o).phone"/></li>
                   <li t-if="o.company_id.get_company(o).email"><i class="fa fa-at"/> <span t-field="o.company_id.get_company(o).email"/></li>
                   <li t-if="o.company_id.website"><i class="fa fa-globe"/> <span t-field="o.company_id.website"/></li><br/>
                   <li t-if="o.company_id.get_company(o).vat"><i class="fa fa-building-o"/><t t-esc="o.company_id.get_company(o).country_id.vat_label or 'VAT'"/>: <span t-field="o.company_id.get_company(o).vat"/></li>
                   <li t-if="o.company_id.get_company(o).company_registry"><i class="fa fa-building-o"/><t t-esc="'Reg:'"/> <span t-field="o.company_id.get_company(o).company_registry"/></li>
                   <li t-if="o.company_id.get_company(o).customer_export"><i class="fa fa-building-o"/><t t-esc="'Customs Export No:'"/> <span t-field="o.company_id.get_company(o).customer_export"/></li>
                </ul>
                <div t-field="o.company_id.get_company(o).report_footer"/>
                <div class="text-muted">
                  Page:
                  <span class="page"/>
                  of
                  <span class="topage"/>
               </div>
              </div>
            </div>
            <div class="page mt0 mb0">
              <div class="article mt0 mb0"> <!--<o_report_layout_background" style="min-height: 650px">-->
                <div class="row mt0 mb0">
                 <div class="col-xs-4 pull-right mt0 mb0">
                    <strong>Shipping(deliver to):</strong><br/>
                      <span t-if="o.partner_shipping_id.name"><span t-field="o.partner_shipping_id.name"/><br/></span>
                      <span t-if="o.partner_shipping_id.street"><span t-field="o.partner_shipping_id.street"/><br/></span>
                      <span t-if="o.partner_shipping_id.street2"><span t-field="o.partner_shipping_id.street2"/><br/></span>
                      <span t-if="o.partner_shipping_id.city"><span t-field="o.partner_shipping_id.city"/></span>
                      <span t-if="o.partner_shipping_id.zip"><span t-field="o.partner_shipping_id.zip"/><br/></span>
                      <span t-if="o.partner_shipping_id.state_id"><span t-field="o.partner_shipping_id.state_id.name"/><br/></span>
                      <span t-if="o.partner_shipping_id.country_id"><span t-field="o.partner_shipping_id.country_id.name"/><br/></span>
                      <!--<span t-if="o.partner_shipping_id.phone">Phone: <span t-field="o.partner_shipping_id.phone"/></span><br/>-->
                      <span t-if="o.partner_shipping_id.mobile">Mobile: <span t-field="o.partner_shipping_id.mobile"/><br/></span>
                      <span t-if="o.partner_shipping_id.vat">VAT: <span t-field="o.partner_shipping_id.vat"/></span>
                      <span t-if="not o.partner_shipping_id">
                        <span t-field="o.partner_id.name"><br/></span>
                        <span t-if="o.partner_id.street"><span t-field="o.partner_id.street"/><br/></span>
                        <span t-if="o.partner_id.street2"><span t-field="o.partner_id.street2"/><br/></span>
                        <span t-if="o.partner_id.city"><span t-field="o.partner_id.city"/></span>
                        <span t-if="o.partner_id.zip"><span t-field="o.partner_id.zip"/></span><br/>
                        <span t-if="o.partner_id.state_id"><span t-field="o.partner_id.state_id.name"/></span><br/>
                        <span t-if="o.partner_id.country_id"><span t-field="o.partner_id.country_id.name"/></span><br/>
                        <!--<span t-if="o.partner_id.phone">Phone: <span t-field="o.partner_id.phone"/></span><br/>-->
                        <span t-if="o.partner_id.mobile">Mobile: <span t-field="o.partner_id.mobile"/></span><br/>
                        <span t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></span>
                      </span>
                  </div>
                <div class="col-xs-4 pull-left mt0 mb0">
                  <strong>Member Address:</strong><br/>
                  <span t-field="o.partner_id.name"/><br/>
                  <span t-if="o.partner_id.street"><span t-field="o.partner_id.street"/><br/></span>
                  <span t-if="o.partner_id.street2"><span t-field="o.partner_id.street2"/><br/></span>
                  <span t-if="o.partner_id.city"><span t-field="o.partner_id.city"/></span>
                  <span t-if="o.partner_id.state_id"><span t-field="o.partner_id.state_id.name"/></span>
                  <span t-if="o.partner_id.zip"><span t-field="o.partner_id.zip"/><br/></span>
                  <span t-if="not o.partner_id.zip"><br/></span>
                  <span t-if="o.partner_id.country_id"><span t-field="o.partner_id.country_id.name"/></span><br/>
                  <!--<span t-if="o.partner_id.phone">Phone: <span t-field="o.partner_id.phone"/></span><br/>-->
                  <span t-if="o.partner_id.mobile">Mobile: <span t-field="o.partner_id.mobile"/></span><br/>
                  <span t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></span>
                </div>
               </div>
                  <h2>
                    <span t-if="o.type == 'out_invoice' and (o.printed == False) and (o.state == 'open' or o.state == 'paid')">Tax Invoice</span>
                    <span t-if="o.type == 'out_invoice' and (o.printed == True) and (o.state == 'open' or o.state == 'paid')">Copy Tax Invoice</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.type == 'out_refund'">Credit Note</span>
                    <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                    <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                    <span t-field="o.number"/>
                  </h2>
                  <div class="row mt0 mb0">
                    <div class="col-xs-3 " t-if="o.name">
                      <strong>Description:</strong>
                      <p t-field="o.name"/>
                    </div>
                    <div class="col-xs-2" t-if="o.date_invoice">
                      <strong>Date Ordered:</strong>
                      <p t-field="o.date_invoice"/>
                    </div>
                    <div class="col-xs-2" t-if="o.partner_id.ref">
                      <strong>Member ID:</strong>
                      <p t-field="o.partner_id.ref"/>
                    </div>
                    <div name="user_id" class="col-xs-3" t-if="o.user_id">
                      <strong>Processor:</strong>
                      <p t-field="o.user_id"/>
                    </div>
                    <!--<div class="col-xs-2">
                      <strong>Payment Terms:</strong>
                        <p>Prepaid</p>
                    </div>-->
                  </div>
                  <!-- Is there a discount on at least one line? -->
                  <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                  <table class="basic_table mgtop2 mb0 mt0" style="width: 100%;" name="invoice_line_table">
                    <thead>
                      <tr>
                        <th>Description</th>
                        <th class="hidden">Source Document</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit PV</th>
                        <th class="text-right">PV's</th>
                        <th class="text-right">Unit Price</th>
                        <th class="text-right">Disc.(%)</th>
                        <th class="text-right">Taxes</th>
                        <th class="text-right">Amount</th>
                      </tr>
                    </thead>
                    <tbody class="invoice_tbody mt0 mb0">
                      <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <td><span t-field="l.name"/></td>
                        <td class="hidden"><span t-field="l.origin"/></td>
                        <td class="text-right">
                          <span t-field="l.quantity" t-field-options="{&quot;widget&quot; :&quot;integer&quot;}"/>
                          <span t-field="l.uom_id" groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                          <span t-field="l.unit_pv"/>
                        </td>
                        <td class="text-right">
                          <span t-field="l.pv"/>
                        </td>
                        <td class="text-right">
                          <span t-field="o.currency_id.symbol"/><span t-field="l.price_unit"/> <!--t-field-options="{&quot;widget&quot;:&quot;integer&quot;}"/>-->
                        </td>
                        <td class="text-right">
                          <span t-field="l.discount"/>
                        </td>
                        <td class="text-right">
                          <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                        </td>
                        <td class="text-right" id="subtotal">
                          <span t-field="l.price_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                  <div class="clearfix"></div>
                  <div class="row" style="page-break-inside: avoid">
                    <div class="col-xs-6">
                      <strong></strong>
                        <p></p>
                    </div>

                    <div id="total" class="col-xs-6">
                      <div>
                        <table class="table-condensed" style="min-width: 250px;max-width: 400px; margin-left:auto;">
                          <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                              <td><strong>Subtotal</strong></td>
                              <td class="text-right">
                                  <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                              </td>
                          </tr>
                          <t t-set="tax_groups_length" t-value="len(o._get_tax_amount_by_group())"/>
                          <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                              <tr style="border-bottom:1px solid #dddddd;">
                                  <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                      <td><span t-esc="amount_by_group[0]"/></td>
                                      <td class="text-right">
                                          <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                      </td>
                                  </t>
                                  <t t-else="">
                                      <td>
                                          <span t-esc="amount_by_group[0]"/>
                                          <span>&amp;nbsp;<span>on</span>
                                              <t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                          </span>
                                      </td>
                                      <td class="text-right">
                                          <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                      </td>
                                  </t>
                              </tr>
                          </t>
                          <tr class="border-black">
                              <td><strong>Total</strong></td>
                              <td class="text-right">
                                  <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                              </td>
                          </tr>
                          <tr class="border-black">
                            <td><strong>Total PV's</strong></td>
                            <td class="text-right">
                              <span t-field="o.total_pv"/>
                            </td>
                          </tr>
                      </table>
                    </div>
                  </div>
              </div>
              <div t-field="o.company_id.get_printed(o).nothing"/>
            </div>
          </div>
        </xpath>
      </template>

      <record id="paperformat_portrait_inuka" model="report.paperformat">
          <field name="name">Inuka Portrait A4</field>
          <field name="default" eval="False" />
          <field name="format">A4</field>
          <field name="orientation">Portrait</field>
          <field name="margin_top">45</field>
          <field name="margin_bottom">57</field>
          <field name="margin_left">7</field>
          <field name="margin_right">7</field>
          <field name="header_line" eval="False" />
          <field name="header_spacing">37</field>
          <field name="dpi">90</field>
     </record>
 </data>
</odoo>
